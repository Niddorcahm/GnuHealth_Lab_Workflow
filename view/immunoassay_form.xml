<?xml version="1.0"?>
<form>
    <group id="header_info" col="4">
        <field name="workflow_sample"/>
        <field name="state"/>
        <field name="name"/>
        <field name="patient"/>
    </group>
    
    <group id="assay_info" col="2">
        <field name="assay_type"/>
        <field name="responsible_professional"/>
    </group>
    
    <separator name="Process Control" string="Process Control"/>
    <group id="buttons" col="3">
        <button name="start_process" string="Start Process"/>
        <button name="complete_process" string="Complete Process"/>
        <button name="cancel" string="Cancel"/>
    </group>
    
    <separator name="Kit Information" string="Kit Information"/>
    <group id="kit_info" col="3">
        <field name="kit_name"/>
        <field name="kit_lot"/>
        <field name="kit_expiry"/>
    </group>
    
    <separator name="Processing Dates" string="Processing Dates"/>
    <group id="dates" col="2">
        <field name="processing_date"/>
        <field name="delivery_date"/>
    </group>
    
    <separator name="Quality Controls" string="Quality Controls"/>
    <group id="controls" col="2">
        <field name="positive_control"/>
        <field name="negative_control"/>
    </group>
    
    <separator name="Antibodies/Antigens Tested" string="Antibodies/Antigens Tested"/>
    <field name="antibodies"/>
    
    <separator name="Clinical Interpretation" string="Clinical Interpretation"/>
    <field name="interpretation"/>
    
    <separator name="Observations" string="Observations"/>
    <field name="observations"/>
</form>
