<?xml version="1.0"?>
<form>
    <group id="header_info" col="4">
        <field name="workflow_sample"/>
        <field name="state"/>
        <field name="name"/>
        <field name="patient"/>
    </group>
    
    <group id="study_info" col="2">
        <field name="study_type"/>
        <field name="responsible_professional"/>
    </group>
    
    <separator name="Process Control" string="Process Control"/>
    <group id="buttons" col="4">
        <button name="start_macroscopy" string="Start Macroscopy"/>
        <button name="complete_macroscopy" string="Complete Macroscopy"/>
        <button name="complete_process" string="Complete Process"/>
        <button name="cancel" string="Cancel"/>
    </group>
    
    <separator name="Macroscopy" string="Macroscopy"/>
    <group id="macroscopy" col="3">
        <field name="macroscopy_date"/>
        <field name="number_of_cuts"/>
        <field name="number_of_cassettes"/>
    </group>
    <field name="macroscopy_observations"/>
    
    <separator name="Processing Dates" string="Processing Dates"/>
    <group id="processing" col="3">
        <field name="processing_date"/>
        <field name="inclusion_date"/>
        <field name="cutting_date"/>
    </group>
    <group id="staining" col="2">
        <field name="staining_date"/>
        <field name="delivery_date"/>
    </group>
    
    <separator name="Antibodies/Markers" string="Antibodies/Markers"/>
    <field name="antibodies"/>
    
    <separator name="Diagnosis &amp; Results" string="Diagnosis &amp; Results"/>
    <field name="diagnosis"/>
    
    <separator name="General Observations" string="General Observations"/>
    <field name="observations"/>
</form>
